<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  
  <servlet>
  	<servlet-name>CustomerServlet</servlet-name>
  	<servlet-class>com.example.invoiceapp.servlet.CustomerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	  <servlet-name>CustomerServlet</servlet-name>
	  <url-pattern>/customers</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet>
  	<servlet-name>ItemServlet</servlet-name>
  	<servlet-class>com.example.invoiceapp.servlet.ItemServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	  <servlet-name>ItemServlet</servlet-name>
	  <url-pattern>/items</url-pattern>
  </servlet-mapping>
  
  
  
  
  <servlet>
  	<servlet-name>InvoiceServlet</servlet-name>
  	<servlet-class>com.example.invoiceapp.servlet.InvoiceServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
	  <servlet-name>InvoiceServlet</servlet-name>
	  <url-pattern>/invoices</url-pattern>
  </servlet-mapping>
  
</web-app>